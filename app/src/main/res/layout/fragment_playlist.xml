<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/textviewtitleplaylist"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="GIAI ĐIỆU ÂM NHẠC"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold">

    </TextView>

    <ListView
        android:id="@+id/listviewplaylist"
        android:layout_width="match_parent"
        android:layout_height="341dp"
        android:layout_below="@id/textviewtitleplaylist">

    </ListView>

    <Button
        android:id="@+id/textviewviewmoreplaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#7A0CB6"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingLeft="100dp"
        android:paddingTop="10dp"
        android:paddingRight="100dp"
        android:paddingBottom="10dp"
        android:text="Xem thêm"
        android:textColor="#FFFDFD"
        android:textSize="15sp"
        android:layout_below="@id/listviewplaylist"/>

</RelativeLayout>