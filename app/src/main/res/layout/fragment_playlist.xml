<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/textviewtitleplaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listviewplaylist"
        android:layout_marginTop="-654dp"
        android:layout_marginBottom="15dp"
        android:background="#c9c7c7"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="NHỊP ĐIỆU CẢM XÚC"
        android:textColor="#3e3b3b"
        android:textSize="25sp" />

    <ListView
        android:id="@+id/listviewplaylist"
        android:layout_width="match_parent"
        android:layout_height="548dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="101dp">

    </ListView>

    <TextView
        android:id="@+id/textviewviewmoreplaylist"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_below="@+id/listviewplaylist"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="8dp"
        android:background="#c9c7c7"
        android:drawableLeft="@drawable/iconmoreplaylist"
        android:drawablePadding="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Xem thêm playlists"
        android:textColor="#0a0a0a"
        android:textSize="19sp" />


</RelativeLayout>